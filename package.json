{
  "name": "desktop-tools",
  "private": true,
  "version": "v0.0.1",
  "description": "",
  "main": "dist/main.js",
  "keywords": [
    "desktop",
    "tools"
  ],
  "author": {
    "name": "Javier Bur√≥n",
    "email": "info@buron.mx",
    "url": "buron.mx"
  },
  "license": "Apache License 2.0",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development ts-node watch.ts",
    "dev:front": "vite app/front",
    "build": "npm run build:front && npm run build:preload && npm run build:back",
    "build:front": "vue-tsc -p app/front/tsconfig.json && vite build app/front",
    "build:preload": "tsc -p app/preload/tsconfig.json && vite build app/preload",
    "build:back": "tsc -p app/back/tsconfig.json && vite build app/back",
    "preview": "vite preview",
    "build:linux": "electron-builder -l",
    "build:macos": "electron-builder -m",
    "build:windows": "electron-builder -w"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.7",
    "bootstrap": "^5.3.0-alpha2",
    "dompurify": "^3.0.1",
    "lodash": "^4.17.21",
    "qrcode": "^1.5.1",
    "vue": "^3.2.47",
    "vue-router": "^4.0.13"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.4.0",
    "@types/bootstrap": "^5.2.6",
    "@types/dompurify": "^3.0.1",
    "@types/lodash": "^4.14.192",
    "@types/node": "^18.15.11",
    "@types/qrcode": "^1.5.0",
    "@vitejs/plugin-vue": "^4.1.0",
    "cross-env": "^7.0.3",
    "electron": "^23.2.1",
    "electron-builder": "^24.2.0",
    "sass": "^1.60.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "vite": "^4.2.0",
    "vue-tsc": "^1.2.0"
  },
  "build": {
    "appId": "mx.buron.desktoptools",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "deb"
      ]
    },
    "mac": {
      "category": "public.app-category.productivity"
    }
  },
  "postinstall": "electron-builder install-app-deps"
}
